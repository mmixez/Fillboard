        <p>Events found: <b><%= event_data.length %></b></p>
    </section>
    <section>
        <% for (var i=0; i < event_data.length; i++) { %>
            <div class="event-display-box">
                <b><p>Eventname: <%= event_data[i]['event_name'] %></p></b>
                <p>Description: <%= event_data[i]['description'] %></p>
                <p>Begin Date: <%= event_data[i]['begin_date'] %></p>
                <p>End Date: <%= event_data[i]['end_date'] %></p>
                <p>Minimum participants: <%= event_data[i]['min_participants'] %></p>
                <p>Maximum participants: <%= event_data[i]['max_participants'] %></p>
                <p>Category: <%= event_data[i]['category_name'] %></p>
                <p>Sub Category: <%= event_data[i]['sub_category_name'] %></p>
            </div>
        <% } %>

    </section>
