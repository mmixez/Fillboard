<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>FILLBOARD MAIN</title>
        <link href="/public/stylesheets/style.css" rel="stylesheet" type="text/css" />
        <link href="/public/stylesheets/hover_button.css" rel="stylesheet" type="text/css" />
        <link rel="icon" href="/public/stylesheets/images/favicon.png">
    </head>

    <body>
        <div class="main-header">
            <nav>
                <div class="nav-left">
                    <img src="/public/stylesheets/images/logo3.png" class="main-logo" />
                    <ul>
                        <li><img src="/public/stylesheets/images/inbox.png"></li>
                        

                    </ul>
                </div>

                <div class="nav-center">

                    <div class="search-box">
                        <img src="/public/stylesheets/images/search.png" class="search" />
                        <input type="text" placeholder="Search Event, people">
                    </div>
                </div>
                <div class="nav-right">
                    <ul>
                    <li><div class="user-pf-post">
                        <img src="/pfp.png" class="user-pf-post-img" />
                        
                    </div></li>
                   <li> <%= user_data[0]['username'] %></li>

                
                    <!-- <ul>
                         <li>
                            <form action="/main_to_profile" method="POST">
                                
                                
                                <div class="main-pf-edit-btn">
                                    <input type="submit" style="background-color: hsl(351, 4%, 66%)"
                                        value="My Profile"></button>
                                    
                                </div>
                            
                            </form>
                        </li>
                        <li>
                            <form action="/logout" method="POST">
                            
                                <div class="main-top-signout-btn">
                                    <input type="submit" style="background-color: hsl(351, 4%, 66%)"
                                        value="Sign Out"></button>
                                </div>        
                            </form>
                        </li>
                    </ul>  -->
            <li>
              <div class="nav-drop">
                <div class="dropdown">
                  <button onclick="myFunction()" class="dropbtn">MENU</button>
                  <div id="myDropdown" class="dropdown-content">
                    <a href="/profile">My Profile</a>

                    <a href="/signup">Sign Out </a>
                    <a href="/aboutus">About US</a>
                  </div>
                </div>
              </div>
            </li></ul>
            <script>
              /* When the user clicks on the button, 
                        toggle between hiding and showing the dropdown content */
              function myFunction() {
                document.getElementById("myDropdown").classList.toggle("show");
              }

              // Close the dropdown if the user clicks outside of it
              window.onclick = function (e) {
                if (!e.target.matches(".dropbtn")) {
                  var myDropdown = document.getElementById("myDropdown");
                  if (myDropdown.classList.contains("show")) {
                    myDropdown.classList.remove("show");
                  }
                }
              };
            </script>
          </ul>
        </div>
      </nav>
    </div>

    <div class="main-container">
      <!-- left column-->
      <div class="main-left-col">
        <div class="main-profile-box">
          <div class="main-left-col-title"></div>
          <div class="welcome-msg">
            <p>WELCOME <%= user_data[0]['username'] %> !</p>
            <br />
            <p>I knew you were coming.</p>
            <p>Logged In Account: <%= user_data[0]['email'] %></p>
          </div>
        </div>
      </div>
      <!-- center column-->
      <div class="main-center-col">
        <div class="main-center-box">
          <div class="write-post-container">
            <div class="user-pf-post">
              <img
                src="<%= '/pfp/' +user_data[0]['id_fillboard_user']%>.png"
                class="user-pf-post-img"
              />
              <div class="post-msg">
                <p><%= user_data[0]['username'] %> Post your event !</p>
                <br />
              </div>
            </div>

            <div class="post-input-container">
              <div class="post-btn-container">
                <form action="/post_text" method="POST">
                  <div class="post-msg-heading">
                    <label for="post_heading">TITLE</label><br />
                  </div>
                  <textarea
                    class="textarea"
                    rows="2"
                    cols="70"
                    placeholder="TITLE"
                    type="post_heading"
                    name="post_heading"
                    id="post_heading"
                  ></textarea
                  ><br />
                  <div class="post-msg-text">
                    <label for="post_text">Post Text</label><br />
                  </div>
                  <textarea
                    class="textarea"
                    rows="6"
                    cols="70"
                    placeholder="WHATS IN YOUR MIND?"
                    type="post_text"
                    name="post_text"
                    id="post_text"
                  ></textarea>
                  <input list="events" name="post_event" id="post_event" placeholder="Event">
                        <datalist id="events">
                            <% for (var i=0; i < events_participated.length; i++) { %>
                                <a></a>
                                <option value="<%= events_participated[i]['event_name'] %>">
                                    <% } %>
                        </datalist>
                  <br>
                  <div class="post-btn">
                    <input
                      type="submit"
                      style="background-color: hsl(351, 4%, 66%)"
                      value="Post"
                    />
                  </div>
                </form>
                <form action="/post_img" method="POST" enctype="multipart/form-data">
                        <div class="post-img-up-btn">
                            <input type="file" accept="image/png" name="fileToUpload" id="fileToUpload">
                            <input type="submit" style="background-color: hsl(351, 4%, 66%)"
                            value="UPLOAD IMG" /> 
                        </div>
                </form>
            </div>
        </div>




                        </div>
                    </div>
                    <% var rowSize = post_data.length;
                    for (var i=0; i < rowSize; i++) { %>
                        <div class="main-center-box">
                            <div class="write-post-container">
                                <div class="post-input-container">
                                    <div class="user-pf-post">
                                        <img
                                          src="<%= '/pfp/' +user_data[0]['id_fillboard_user']%>.png"
                                          class="user-pf-post-img"
                                        />
                                        <div class="post-msg">
                                          <p><%= post_data[i]['username'] %> said <%= post_data[i]['heading'] %></p>
                                            <form action="<%= '/deletePost/' + post_data[i]['idposts']%>">
                                                <div class="post-btn" style="float: right;">
                                                    <input type="submit" style="background-color: hsl(351, 4%, 66%);"
                                                        value="DELETE" />
                                                </div>
                                            </form>
                                        
                                          <br />
                                        </div>
                                        
                                    </div>
                                   

                                    <img src="<%= '/post_picture/' + post_data[i]['post_picture_path']%>"><br><br>
                                    <textarea readonly class="textarea" rows="6" cols="70" type="post_text" name="post_text" id="post_text"><%= post_data[i]['post_text'] %></textarea>
                                    
                                    
                                    
                                    <div class="post-msg-heading">
                                        <label>Event: <%= post_data[i]['event_name'] %></label><br>
                                        <label>Date: <%= post_data[i]['begin_date'] %> - <%= post_data[i]['end_date'] %></label><br>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        </div>





                    <% } %>
                </div>

                <div class="main-right-col">
                    <div class="right-sidebar">
                        <div class="sidebar-title">
                          <h3>Suggested Events</h3>
                          <a href="#">   
                            <form action="/main_to_event" method="POST">
                            <input type="submit"  value="See ALL" />
                        </form></a>
                        </div>
                
                
                    
      
                      </div>
                    
                    
                    

                   
                    <div class="event">
                        <% for (var i=0; i < event_data.length; i++) { %>
                            <div class="main-event-box">
                                
                                    <div class="post-input-container">
                                        <div class="post-event-heading">
                                            
                                            <span class="bolded"><label for="post_heading"><%= event_data[i]['event_name'] %></label></span><br>
                                            <p>DATE: <%= event_data[i]['begin_date'] %></p>
                                            <label for="post_heading"><%= event_data[i]['description'] %></label><br>
                                            <a href="#">More Info</a>
                                        </div>
                                    </div>
                                
                            </div>
                        <% } %>
                    </div>
                    <br><br><br>
                    <div class="right-sidebar">
                    <div class="sidebar-title">
                        <h3>Advertisement</h3>
                         <a href="#"></a>
                        
                      </div>

                       <img src="/public/stylesheets/images/gg2.png" class="sidebar-ads">
                       <br>
                       <img src="/public/stylesheets/images/gg3.png" class="sidebar-ads">
                    </div>
                    
                </div>

                </div>
            
        
        <div id='wrapper'>
            <div>
                <p1> FillBoard 2022</p1>
            </div>
        </div>
        <footer></footer>
    </body>
</html>